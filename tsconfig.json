// tsconfig.json
{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "types": [ "jest"],
    "include": [".eslintrc.js", "src/**/*"],
    "exclude": [
      "node_modules", 
      "dist/**/*",
      "**/*.spec.ts"
    ],
  }
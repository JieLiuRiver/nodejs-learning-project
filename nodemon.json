{
  "ignore": [".git", "node_modules", "dist", "dist"],
  "watch": ["src", "!src/db"],
  "exec": "tsc && babel-node dist/app.js",
  "ext": "ts",
  "delay": 500,
  "legacyWatch": true,
  "events": {
    "restart": "mkdir -p dist && cp -r ./src/db/  dist/db/",
    "start": "mkdir -p dist && cp -r ./src/db/  dist/db/",
    "crash": "node scripts/crash-handle.js"
  }
}